# Broadcasting Configuration
BROADCAST_DRIVER=pusher

# Alternative: Redis for broadcasting (lebih cepat untuk high-frequency data)
# BROADCAST_DRIVER=redis
# REDIS_BROADCAST_HOST=127.0.0.1
# REDIS_BROADCAST_PORT=6379
# REDIS_BROADCAST_PASSWORD=null
# REDIS_BROADCAST_DB=1

# Pusher Configuration (untuk WebSocket via Soketi) - BACKEND
PUSHER_APP_ID=12345
PUSHER_APP_KEY=scada_dashboard_key_2024
PUSHER_APP_SECRET=scada_dashboard_secret_2024
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_ENCRYPTED=false

# Queue Configuration (Redis untuk performa maksimal)
QUEUE_CONNECTION=redis

# Redis Configuration (untuk queue, cache, dan session)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_DRIVER=redis

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Vite Configuration (FRONTEND - menggunakan variabel PUSHER_*)
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# SCADA specific settings
SCADA_DATA_INTERVAL=5
SCADA_MAX_RECORDS=10000
SCADA_CACHE_TTL=300
SCADA_REALTIME_ENABLED=true
